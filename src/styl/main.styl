@font-face {
	font-family: 'HWB';
	src: url('../../staff/fonts/HelveticaWorld-Bold.ttf');
	font-weight: bold;
	font-style: bold;
}

@font-face {
	font-family: 'HW';
	src: url('../../staff/fonts/HelveticaWorld-Regular.ttf');
	font-weight: normal;
	font-style: normal;
}

html, body
	margin 0
	padding 0
	cursor none
	user-select none
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	background-color black
	color white

html, body, .content-block, .swiper-container
	height 100%

.banner-block
	z-index 999999999
	position absolute
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.40)
	overflow hidden
	opacity 1
	transition 0.25s opacity linear
	&.hidden
		transition 0.25s opacity linear
		opacity 0
	.banner-inner
		position absolute
		width 100%
		bottom 20%
	.banner-section
		float left
		text-align center
		&.left
			width 24%
			// background-color grey
		&.main
			width 76%
			// background-color red
		&.center
			width 50%
			// background-color green
		&.right
			width 50%
			// background-color blue
	.banner-button
		width 80px
		height 80px
		border-radius 100%
		border 3px solid white
		display inline-block
		margin-right 40px
		position relative
		background-image url('../../staff/icons/arrow_w.svg')
		background-size 40%
		background-position center
		background-repeat no-repeat
		&.active
			background-color white
			background-image url('../../staff/icons/arrow.svg')
		&.slide_left
			transform rotate(-180deg)
		&.complex
		&.scroll
			transform rotate(90deg)
		&:last-child
			margin-right 0


.grained-block
	// z-index 999999999
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	#grained
		width 100%
		height 100%
		background-color rgba(240, 240, 240, 0.10)


.content-block
	padding 25px
	padding-right 20px
	box-sizing border-box
	width 100%
	position absolute
	// filter: blur(5px)
	// transition 0.25s filter linear
	// &.open
	// 	transition 0.25s filter linear
	// 	filter: blur(0px)


.navigate-blocks
	width 24%
	height 100%
	// background-color #a5a5a5
	float left
	padding-right 30px
	box-sizing border-box
	.navigate-block
		text-transform uppercase
		margin-bottom 10px
		font 20pt/26pt 'HW'
		&.active
			text-decoration underline
		// span
		// 	border-bottom 3px solid transparent
		// &.active span
		// 	border-bottom 3px solid white


.swiper-container-v
	width 76%
	// background-color #f2c46c
	float left
	overflow hidden
	position relative


.swiper-container-h
	width 50%
	overflow hidden
	// background-color red
	float left
	position relative

.desk-block
	width 50%
	height 100%
	// background-color #68ce46
	float left
	position relative
	.description-block
		// background-color #e99e6f
		padding-left 30px
		box-sizing border-box
		overflow hidden
		padding-bottom 180px
		box-sizing border-box
		height 100%
		width 100%
		position absolute
		.description-end
			margin-top 40px
			font 12pt/14pt 'HWB'
			text-align center
		.description-content
			hyphens auto
			h1, p
				margin 0
				padding 0
			h1
				font 16pt/18pt 'HWB'
				font-weight bold
				margin-bottom 20px
			p
				text-indent 80px
				font 16pt/18pt 'HW'
	.labels-block
		padding-top 45px
		padding-left 30px
		box-sizing border-box
		width 100%
		position absolute
		bottom 0px
		background-color black
		// background-color #003da6
		.label-item
			font 12pt/14pt 'HW'
			display none
			.label
				margin-bottom 5px
				&.title:before
					margin-right 5px
					content '‚Üê'
			&.active
				display block


.slide-image
	background-position center
	background-size contain
	background-repeat no-repeat
	width 100%
	height 100%

