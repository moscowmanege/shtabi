@font-face {
	font-family: 'HWB';
	src: url('../../fonts/HelveticaWorld-Bold.ttf');
	font-weight: bold;
	font-style: bold;
}

@font-face {
	font-family: 'HW';
	src: url('../../fonts/HelveticaWorld-Regular.ttf');
	font-weight: normal;
	font-style: normal;
}

html, body
	margin 0
	padding 15px
	box-sizing border-box
	// cursor none
	// user-select none
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	background-color black
	color white

.banner-block
	z-index 999999999
	position absolute
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.80)
	top 0; left 0; right 0; bottom 0
	overflow hidden
	.banner-button
		width 80px
		height 80px
		border-radius 100%
		border 3px solid white
		display inline-block
		transform translateY(75vh)
		margin-right 40px
		position relative
		&.slide_left
			transform translateY(75vh) rotate(-180deg)
		&.complex
		&.scroll
			transform translateY(75vh) rotate(90deg)
		&:last-child
			margin-right 0
		&:after
			content '➞'
			padding-top 20px
			position absolute
			display block
			font-size 35px
			top 0; left 0; right 0; bottom 0
	.banner-section
		height 100%
		float left
		// opacity 0.4
		text-align center
		&.left
			width 20%
			// background-color grey
		&.main
			width 80%
			// background-color red
		&.center
			width 60%
			// background-color green
		&.right
			width 40%
			// background-color blue


html, body, .swiper-container
	height 100%


.navigate-blocks
	width 20%
	height 100%
	// background-color #a5a5a5
	float left
	padding-right 15px
	box-sizing border-box
	.navigate-block
		text-transform uppercase
		margin-bottom 10px
		font 26pt/36pt 'HW'
		&.active span
			border-bottom 3px solid white


.swiper-container-v
	width 80%
	height 100%
	// background-color #f2c46c
	float left
	overflow hidden
	position relative


.swiper-container-h
	width 60%
	overflow hidden
	// background-color red
	float left
	position relative

.desk-block
	width 40%
	height 100%
	// background-color #68ce46
	float left
	padding-left 15px
	box-sizing border-box
	.description-block
		// background-color #e99e6f
		overflow hidden
		padding-bottom 40px
		box-sizing border-box
		height 85%
		.description-end
			margin-top 40px
			font 12pt/14pt 'HWB'
			text-align center
		.description-content
			h1
				font 18pt/20pt 'HWB'
			p
				font 18pt/20pt 'HW'
			h1, p
				margin 0
				padding 0
				padding-bottom 10px
	.labels-block
		padding-top 20px
		box-sizing border-box
		height 15%
		// background-color #003da6
		.label-item
			font 14pt/16pt 'HW'
			display none
			// &:before
			// 	content '←'
			&.active
				display block


.slide-image
	background-position center
	background-size contain
	background-repeat no-repeat
	width 100%
	height 100%
