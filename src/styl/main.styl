@font-face {
	font-family: 'HWB';
	src: url('../../fonts/HelveticaWorld-Bold.ttf');
	font-weight: bold;
	font-style: bold;
}

@font-face {
	font-family: 'HW';
	src: url('../../fonts/HelveticaWorld-Regular.ttf');
	font-weight: normal;
	font-style: normal;
}


html, body
	margin 0
	padding 0
	// cursor none
	// user-select none
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	background-color black
	color white

.banner-block
	display none
	z-index 999999999
	position absolute
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.80)
	top 0; left 0; right 0; bottom 0


html, body, .swiper-container
	height 100%


.navigate-blocks
	width 20%
	height 100%
	background-color grey
	float left
	.navigate-block
		&.active
			color red


.swiper-container-v
	width 80%
	height 100%
	background-color #f2c46c
	float left
	overflow hidden


.swiper-container-h
	width 60%
	overflow hidden
	background-color red
	float left

.desk-block
	width 40%
	height 100%
	background-color green
	float left
	.description-block
		background-color #e99e6f
		height 85%
		p
			margin 0
			padding 0
			padding-bottom 10px
	.labels-block
		height 15%
		background-color #003da6
		.label-item
			display none
			&.active
				display block



.slide-image
	background-position center
	background-size contain
	background-repeat no-repeat
	width 100%
	height 100%


